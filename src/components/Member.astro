---
interface Props {
  image: string;
  name: string;
  role: string;
}

const { image, name, role } = Astro.props;
---

<div class="member-card">
  <div class="member-image">
    <img src={image} alt={`Photo de ${name}`} />
    <div class="member-info">
      <h3 class="member-name">{name}</h3>
      <p class="member-role">{role}</p>
    </div>
  </div>
</div>

<style>
  .member-card {
    background: #ffffff00;
    backdrop-filter: blur(10px);
    border-radius: 16px;
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
    overflow: hidden;
    width: 280px;
    transition: all 0.3s ease;
  }

  @media (max-width: 768px) {
    .member-card {
      width: 100%;
    }
    .member-info {
      display: none;
    }
  }

  .member-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 12px 40px rgba(0, 0, 0, 0.15);
  }

  .member-image {
    width: 100%;
    height: 320px;
    position: relative;
    overflow: hidden;
  }

  @media (max-width: 768px) {
    .member-image {
      height: 160px;
    }
  }

  .member-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .member-card:hover .member-image img {
    transform: scale(1.05);
  }

  .member-info {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    padding: 1rem;
    background: linear-gradient(to top, rgba(0,0,0,0.8), transparent);
    color: white;
  }

  .member-name {
    font-size: 1.25rem;
    font-weight: 600;
    margin: 0;
    line-height: 1.2;
  }

  .member-role {
    font-size: 0.9rem;
    margin: 0.25rem 0 0;
    opacity: 0.9;
  }

</style>